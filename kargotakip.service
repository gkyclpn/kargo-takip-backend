[Unit]
Description=kargotakip backend service

[Service]
Environment=PATH=/usr/bin:/usr/local/bin
User=root
Group=nogroup
WorkingDirectory=/usr/local/kargo-takip-backend
ExecStart=/home/root/.nvm/versions/node/v17.5.0/bin/node /usr/local/kargo-takip-backend/src/server.js
Restart=always

[Install]
WantedBy=multi-user.target
